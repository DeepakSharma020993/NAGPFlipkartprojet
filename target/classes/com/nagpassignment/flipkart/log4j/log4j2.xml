<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <File name="LogFile" fileName="logs/application.log">
            <PatternLayout pattern="%d %-5p [%t] %c{1.} - %m%n" />
        </File>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="LogFile" />
        </Root>
    </Loggers>
</Configuration>
